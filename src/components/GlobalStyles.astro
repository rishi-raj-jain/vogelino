<style is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	@layer base {
		@font-face {
			font-family: 'FUNGIS';
			src: url('/fonts/fungis/fungis-regular.eot');
			src: url('/fonts/fungis/fungis-regular.eot?#iefix')
					format('embedded-opentype'),
				url('/fonts/fungis/fungis-regular.woff') format('woff'),
				url('/fonts/fungis/fungis-regular.ttf') format('truetype');
			font-style: normal;
			font-weight: normal;
			text-rendering: optimizeLegibility;
			font-display: swap;
		}

		@font-face {
			font-family: 'FUNGIS';
			src: url('/fonts/fungis/fungis-bold.eot');
			src: url('/fonts/fungis/fungis-bold.eot?#iefix')
					format('embedded-opentype'),
				url('/fonts/fungis/fungis-bold.woff') format('woff'),
				url('/fonts/fungis/fungis-bold.ttf') format('truetype');
			font-style: normal;
			font-weight: bold;
			text-rendering: optimizeLegibility;
			font-display: swap;
		}

		@font-face {
			font-family: 'Lobular';
			src: url('/fonts/lobular/lobular-regular.eot');
			src: url('/fonts/lobular/lobular-regular.woff2') format('woff2'),
				url('/fonts/lobular/lobular-regular.woff') format('woff');
			font-style: normal;
			font-weight: normal;
			text-rendering: optimizeLegibility;
			font-display: swap;
		}

		::-moz-selection,
		::selection {
			@apply text-alt bg-fg;
		}

		:root {
			--fg: #e30002;
			--fgDark: #a40002;
			--bg: #fcfeff;
			--alt: #ffef9b;
			--grayDark: #5d7280;
			--grayMed: #d0dfe7;
			--grayLight: #e1ecf2;
			--grayUltraLight: #f1faff;
		}
		@media (prefers-color-scheme: dark) {
			:root {
				--fg: #ffef9b;
				--fgDark: #f0dc78;
				--bg: #101010;
				--alt: #e30002;
				--grayDark: #222222;
				--grayMed: #393939;
				--grayLight: #2c2c2c;
				--grayUltraLight: #000000;
			}
		}

		::-moz-selection,
		::selection {
			background: var(--bg, #ffef9b);
			color: var(--fg, #e30002);
		}
	}
</style>
