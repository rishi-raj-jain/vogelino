---
import Layout from '../layouts/Layout.astro'
import classNames from '../utils/classNames'
---

<Layout title="404 Not Found" slug="fourOfour">
	<div class="flex flex-col items-center justify-center h-screen">
		<div class="flex flex-col items-center justify-center">
			<h1 class="text-6xl font-bold text-center">404</h1>
			<h2 class="text-2xl font-bold text-center">Page not found</h2>
			<p class="text-center">The page you are looking for does not exist.</p>
			<a href="/" class="mt-4 text-center">
				<button
					class={classNames(
						`px-4 pb-2 pt-1.5 text-xl bg-alt font-special text-fg transition-colors`,
						`rounded-full hover-hover:hover:bg-fg hover-hover:hover:text-bg`,
						`focus:outline-none focus:ring-2 focus:ring-fg focus:ring-offset-2 focus:ring-offset-alt`,
					)}
				>
					Go back home
				</button>
			</a>
		</div>
	</div>
</Layout>
